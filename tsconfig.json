{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "stripInternal": true,
    "target": "ES2023",
    "module": "Node16",
    "moduleResolution": "node16",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "isolatedModules": true
  },
  "exclude": ["test-d/**/*", "*.test.ts"],
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true
  }
}
