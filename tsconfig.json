{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "stripInternal": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true
  },
  "exclude": [
    "test-d/**/*",
    "*.test.ts"
  ],
  "include": [
    "src/**/*"
  ]
}
