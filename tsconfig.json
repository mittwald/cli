{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "stripInternal": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true
  },
  "exclude": ["test-d/**/*", "*.test.ts"],
  "include": ["src/**/*"]
}
